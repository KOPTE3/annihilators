{
	"compilerOptions": {
		"typeRoots": [
			"./node_modules/@types",
			"./types"
		],

		"lib": [
			"es2018",
			"es2017",
			"es2016",
			"es2015"
		],

		"target": "es2018",
		"module": "commonjs",
		"moduleResolution": "node",
		"allowJs": true,

		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"allowSyntheticDefaultImports": false,
		"forceConsistentCasingInFileNames": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"noImplicitAny": false,
		"alwaysStrict": true,

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,

		"declaration": false,
		"sourceMap": false,
		"newLine": "LF",
		"pretty": false
	},

	"exclude": [
		"node_modules"
	]
}
